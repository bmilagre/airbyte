{
  "documentationUrl" : "https://docsurl.com",
  "connectionSpecification" : {
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "title" : "Google Mb Spec",
    "type" : "object",
    "required" : [
      "location_id",
      "date_range",
      "credentials"
    ],
    "properties" : {
      "location_id" : {
        "title" : "Location ID",
        "type" : "string",
        "description" : "Location id of the location you want to get metrics for"
      },
      "date_range" : {
        "type" : "object",
        "title": "Date Range",
        "oneOf" : [
          {
            "title": "Range by specific dates",
            "required" : ["start_date", "end_date"],
            "properties" : {
              "range_type": {
                "type": "string",
                "title": "Range type title",
                "description": "Type of data retrieval",
                "const": "Predefined dates",
                "enum": ["Predefined dates"],
                "default": "Predefined dates",
                "order": 0
              },
              "start_date" : {
                "type" : "string",
                "title" : "Start Date",
                "description" : "UTC date in the format 2017-01-25. Any data before this date will not be replicated.",
                "pattern" : "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples" : ["2017-01-25"]
              },
              "end_date" : {
                "type" : "string",
                "title" : "End Date",
                "description" : "UTC date and in the format 2017-01-25. Any data after this date will not be replicated.",
                "pattern" : "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples" : ["2017-01-30"]
              }
            }
          },
          {
            "title": "Range by last N days",
            "required" : ["number_of_days"],
            "properties" : {
              "range_type": {
                "type": "string",
                "title": "Range type title",
                "description": "Type of data retrieval",
                "const": "Number of days",
                "enum": ["Number of days"],
                "default": "Number of days",
                "order": 0
              },
              "number_of_days" : {
                "type" : "integer",
                "title" : "Number of days",
                "description" : "Number of days for which we want to get the data for"
              }
            }
          }
        ]
      },
      "credentials" : {
        "type" : "object",
        "description" : "",
        "title" : "Google Credentials",
        "required" : [
          "client_id",
          "client_secret",
          "refresh_token"
        ],
        "properties" : {
          "client_id" : {
            "type" : "string",
            "title" : "Client ID",
            "order" : 0,
            "description" : "The Client ID of your Google Ads developer application. More instruction on how to find this value in our <a href=\"https://docs.airbyte.com/integrations/sources/google-ads#setup-guide\">docs</a>"
          },
          "client_secret" : {
            "type" : "string",
            "title" : "Client Secret",
            "order" : 1,
            "description" : "The Client Secret of your Google Ads developer application. More instruction on how to find this value in our <a href=\"https://docs.airbyte.com/integrations/sources/google-ads#setup-guide\">docs</a>",
            "airbyte_secret" : true
          },
          "token" : {
            "type" : "string",
            "title" : "Access Token",
            "order" : 2,
            "description" : "Access Token for making authenticated requests. More instruction on how to find this value in our <a href=\"https://docs.airbyte.com/integrations/sources/google-ads#setup-guide\">docs</a>",
            "airbyte_secret" : true
          },
          "refresh_token" : {
            "type" : "string",
            "title" : "Refresh Token",
            "order" : 3,
            "description" : "The token for obtaining a new access token. More instruction on how to find this value in our <a href=\"https://docs.airbyte.com/integrations/sources/google-ads#setup-guide\">docs</a>",
            "airbyte_secret" : true
          }
        }
      }
    }
  },
  "authSpecification" : {
    "auth_type" : "oauth2.0",
    "oauth2Specification" : {
      "rootObject" : ["credentials", 0],
      "oauthFlowInitParameters" : [["client_id"], ["client_secret"]],
      "oauthFlowOutputParameters" : [["token"], ["refresh_token"]]
    }
  }
}